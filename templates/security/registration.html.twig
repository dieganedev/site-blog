{% extends 'base.html.twig' %}

    {% block body %}
    
    {% if app.user %}    
        <div class = "jumbotron">
            <h1 class = "display-3"> <font style = "vertical-align: inherit;"> <font style = "vertical-align: inherit;"> Bienvenue dans DiéBlog! </font> </font> </h1>
            <p class = "lead"> <font style = "vertical-align: inherit;"> <font style = "vertical-align: inherit;"> Il s'agit d'un blog avec un système de commentaire </font> </font> </p>
            <hr class = "my-4">
            <p> <font style = "vertical-align: inherit;"> <font style = "vertical-align: inherit;"> Le blog possède des articles rangés en fonction de leurs dates de publications,les articles les plus récent en premier. </font> </font> </p>
            <p class = "lead">
                <a class="btn btn-primary btn-lg" href="{{ path('blog_affiche') }}" role="button"> <font style = "vertical-align: inherit;"> <font style = "vertical-align: inherit;">> Apprendre encore plus </font> </font> </a>
            </p>
        </div> 
    {% else %}
        <h1>Inscription sur DléBlog !</h1> 

        {{ form_start(form) }}
        {{ form_row(form.email, {'attr' : {'placeholder' : "example@email.com" }}) }}
        {{ form_row(form.prenom, {'label' : 'Prénom', 'attr' : {'placeholder' : "Prénom d'utilisateur" }}) }}
        {{ form_row(form.nom, {'label' : 'Nom', 'attr' : {'placeholder' : "Nom d'utilisateur" }}) }}
        {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : "Mot de passe !" }}) }}
        {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe', 'attr' : {'placeholder' : " Répetez votre mot de passe " }}) }}
        {{ form_row(form.sexe, {'label' : 'Séxe', 'attr' : {'placeholder' : " (Homme/Femme)" }}) }}
        {{ form_row(form.phone, {'label' : 'N° téléphone', 'attr' : {'placeholder' : "Votre n° de téléphone" }}) }}

            <button type="submit" class="btn btn-success">S'inscrire</button>

        {{ form_end(form) }}
    {% endif %}


    {% endblock %}