{% extends 'base.html.twig' %}

    {% block body %}
        <h1>Liste des articles !</h1>

        <section class="articles">
            {% for article in articles %}
                <article> 
                    <h2>{{ article.titre }}</h2>
                    <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y')}} à {{ article.createdAt | date('H:i')}} dans la catégorie 
                            {{ article.category.titre }}</div>
                    <div class="content"> 
                    <img src="{{ article.image }}" alt="">
                    {{ article.description | raw }}
                    <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite </a>
                    <div>
                </article>
           {% endfor %}

        </section>
        
    {% endblock %}